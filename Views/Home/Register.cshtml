
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<section class="form-login">
    <p class="para-login">Register</p>
    @{
        Html.BeginForm("PostRegister", "Home", FormMethod.Post);
        <input class="input" type="text" id="username" name="username" placeholder="Username">
        <input class="input" type="email" id="email" name="email" placeholder="Email">
        <input class="input" type="password" id="password" name="password" placeholder="Password">
        <input class="input" type="password" id="confirmpassword" name="confirmpassword" placeholder="Confirm password">
        <button id="btn-login" type="submit">Submit</button>
    }
</section>